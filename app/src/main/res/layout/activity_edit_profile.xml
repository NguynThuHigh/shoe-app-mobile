<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:layout_marginTop="30dp">
    <include layout="@layout/item_back">
    </include>

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/avt" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/name_userEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="22sp"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/alata_regular"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black">

        </TextView>

        <Button
            android:contentDescription="btnEditName"
            android:id="@+id/btnRename"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_editname"/>

    </LinearLayout>




    <Button
        android:id="@+id/btnChangePassword"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="Change Password"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:fontFamily="@font/alata_regular"
        android:textStyle="bold"
        android:drawableStart="@drawable/icon_password"
        android:drawableEnd="@drawable/icon_nextarrow"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/border_radius_30dp"
        >

    </Button>
</LinearLayout>
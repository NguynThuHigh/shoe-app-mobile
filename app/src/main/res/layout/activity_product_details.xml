<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductDetailsActivity">

    <include layout="@layout/item_menuback">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dt_proName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata_regular"
                        android:text="Product's Name"
                        android:textColor="@color/black"
                        android:textSize="30sp"></TextView>

                    <TextView
                        android:id="@+id/dt_proCate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata_regular"
                        android:text="Product's Catgory"
                        android:textColor="#928A8A"
                        android:textSize="20sp"></TextView>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:background="@color/black"
                    android:padding="0dp"
                    android:text="4,5"
                    android:textSize="10sp">

                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <FrameLayout
                    android:id="@+id/bg_pro_details_main"
                    android:layout_width="310dp"
                    android:layout_height="170dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/bg_details_new"
                    android:rotation="-20"></FrameLayout>

                <FrameLayout
                    android:id="@+id/bg_pro_details_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="70dp"
                    android:background="@drawable/bg_details_item_2"></FrameLayout>

                <FrameLayout
                    android:id="@+id/bg_pro_details"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="310dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_details_item_2"></FrameLayout>

                <ImageView
                    android:id="@+id/dt_proImage"
                    android:layout_width="325dp"
                    android:layout_height="185dp"
                    android:layout_marginTop="43dp"
                    android:layout_marginRight="2dp"
                    android:rotation="-25"
                    app:srcCompat="@drawable/shoe8" />

                <RelativeLayout

                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="165dp"
                    android:layout_marginTop="220dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/border_radius_10dp">

                        <ImageButton
                            android:id="@+id/addToFvbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            app:srcCompat="@drawable/favorite">

                        </ImageButton>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="88dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/custom_button1"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.95"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txtTextSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/alata_regular"
                            android:text="Size: 40"
                            android:textSize="13sp"
                            android:textStyle="bold">

                        </TextView>

                        <ImageButton
                            android:id="@+id/btnPopupSize"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"

                            android:layout_marginLeft="1dp"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/sort_down">

                        </ImageButton>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="75dp"
                        android:background="@drawable/custom_button1"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.95"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/proColor"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="6dp"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="7dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/alata_regular"
                            android:text="Color"
                            android:textSize="13sp"
                            android:textStyle="bold">

                        </TextView>

                        <ImageButton
                            android:id="@+id/btnPopupColor"
                            android:layout_width="30dp"

                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/sort_down">

                        </ImageButton>

                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dt_proPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/alata_regular"
                        android:text="$1000"
                        android:textColor="@color/black"
                        android:textSize="36sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/alata_regular"
                        android:text="$1000"
                        android:textColor="@color/black"
                        android:textSize="25sp"></TextView>
                </LinearLayout>

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata_regular"
                    android:text="Descend deep into the desert that turns modest gains into house calls."
                    android:textColor="@color/black"
                    android:textSize="21sp">

                </TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_to_cart"
                    android:layout_width="163dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_default"
                    android:text="Add to Cart"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp"></Button>

                <Button
                    android:id="@+id/btnBuyNow"
                    android:layout_width="163dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_default"
                    android:text="Buy Now"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
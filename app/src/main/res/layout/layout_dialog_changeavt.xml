<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/bg_corner_20"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/black"
        android:padding="12sp"
        android:background="@drawable/bg_corner_white_silver_20"
        android:text="Change avatar"
        />
    <Button
        android:id="@+id/btnSelectInSP"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select photo in gallery"
        android:textSize="22dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_corner_20"
        android:textStyle="italic"
        />
    <Button
        android:id="@+id/btnTakeNow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Take a photo"
        android:textSize="22dp"
        android:background="@drawable/bg_corner_20"
        android:textStyle="italic"
        />

    <LinearLayout
        android:id="@+id/btnsaveAvt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:paddingStart="12dp"
        android:background="@drawable/bg_corner_gray_30"
        android:orientation="horizontal">

        <ImageButton
            android:contentDescription="imgSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_save" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:text="Save" />
    </LinearLayout>
</LinearLayout>
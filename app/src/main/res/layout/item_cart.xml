<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/bg_item_card_custom"
        android:layout_width="355dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/item_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="@drawable/bg_item_card_custom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="85dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/proName_cart"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alata_regular"
                            android:text="Nike Air Force One Vừa Mua ở Việt Nam"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold">

                        </TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/proPrice_cart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/alata_regular"
                                android:text="$150"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/discount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/alata_regular"
                                android:text="$150"

                                android:textColor="@color/white"
                                android:textSize="17sp">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/removePro"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:src="@drawable/remove_item" />

                    <ImageView
                        android:id="@+id/proImg_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/shoe5" />

                    <LinearLayout
                        android:layout_width="83dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="95dp"
                        android:background="@drawable/func_border"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/decreasePro"
                            android:layout_width="25dp"

                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/decrease_pro" />

                        <TextView
                            android:id="@+id/viewQuantity"
                            android:layout_width="29dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold">

                        </TextView>

                        <ImageButton
                            android:id="@+id/increasePro"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="1dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/add_pro" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>